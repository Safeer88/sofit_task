<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.dd.ShadowLayout
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/edttext_gaptop"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"

        android:paddingBottom="10dp"
        app:sl_cornerRadius="18dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="@color/thm_shadow_blue">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shp_rect_rounded_white">

            <LinearLayout
                android:id="@+id/frg_home_list_datails_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"

                >
                <ImageView

                    android:id="@+id/frg_home_list_payment_img"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_phone"


                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/frg_home_list_txv_payment"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp"
                    android:text="payment Histroy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />






            </LinearLayout>


        </RelativeLayout>
    </com.dd.ShadowLayout>
</RelativeLayout>